@using Microsoft.Ajax.Utilities
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Amihan Information Technology</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @{Html.RenderPartial("~/Views/Shared/EditorTemplates/Headers.cshtml");}
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>
    <div id="wrap">
        <div class="navbar-wrapper">
            <div class="container">

                <div class="navbar navbar-inverse navbar-default navbar-fixed-top " role="navigation">
                    <div class="container">
                        <div class="navbar-header ">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="~/Home"
                                style="font-size: 24px; font-weight: bold; color: orange; font-family: 'Bookman Old Style';">amstock</a>
                        </div>
                        <div class="navbar-collapse collapse navbar-right">


                            <ul class="nav navbar-nav ">
                                <li id="homemenu"><a href="~/Home"><i class="glyphicon glyphicon-home"></i>&nbsp;Home</a></li>
                            </ul>
                            <ul class="nav navbar-nav ">
                                <li id="ohimenu"><a href="~/OnHandInventory"><i class="glyphicon glyphicon-list"></i>&nbsp;Inventory</a></li>
                            </ul>
                            <ul class="nav navbar-nav ">
                                <li class="dropdown" id="tranmenu">
                                    <a class="dropdown-toggle"
                                        data-toggle="dropdown"
                                        href="#"><i class="glyphicon glyphicon-shopping-cart"></i>&nbsp;Transactions
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li id="salemenu">
                                            @Html.ActionLink("Sales", "Index", "Transaction", new { type = 1 }, null)
                                        </li>
                                        <li id="purmenu">
                                            @Html.ActionLink("Purchases", "Index", "Transaction", new { type = 2 }, null)
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                            <ul class="nav navbar-nav ">
                                <li class="dropdown" id="bpmenu">
                                    @*@Html.ActionLink("","").ToHtmlString().If(User.IsInRole(""))*@
                                    <a class="dropdown-toggle"
                                        data-toggle="dropdown"
                                        href="#"><i class="glyphicon glyphicon-user"></i>&nbsp;Business Partners
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li id="custmenu">
                                            @Html.ActionLink("Customers", "Index", "BusinessPartner", new { type = 1 }, null)
                                        </li>
                                        <li id="supmenu">
                                            @Html.ActionLink("Suppliers", "Index", "BusinessPartner", new { type = 2 }, null)
                                        </li>
                                    </ul>
                                </li>
                            </ul>

                            <ul class="nav navbar-nav ">
                                <li id="adminmenu">
                                    <a href="~/Users"><i class="glyphicon glyphicon-wrench"></i>&nbsp;Administration</a>
                                </li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                            @*<ul class="nav navbar-nav ">
                                <li id="usermenu"></li>
                            </ul>*@

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <section class="content-wrapper main-content clear-fix container">

            @RenderBody()
        </section>
    </div>

    <div id="footer">
        <div class="container">
            <p class="text-muted" style="text-align: right;">&copy; Copyright 2015 <a href="http://www.amihanit.com" target="_blank">amihan IT Solutions, PLC.</a> &middot; <a href="#" class="hidden-print">Privacy</a> &middot; <a href="#" class="hidden-print">Terms</a></p>
        </div>
    </div>

    <script type="text/javascript">
        $('.dropdown-toggle').dropdown();
        $(".collapse").collapse();

        function error_handler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                alert(message);
            }
        }
    </script>
</body>
</html>
